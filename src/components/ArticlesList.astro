---
import ArticlesIsland from '@/components/ArticlesIsland.tsx';

interface Props {
  items: Array<{
    id: string;
    title: string;
    tag: string;
    slug: string;
    thumbnail: string;
    date: string;
    summary: string;
  }>;
  tags: string[];
  totalPages?: number;
}

const { items, tags, totalPages = 1 } = Astro.props;
---
<section>
  <h2 class="font-aspekta text-xl font-[650] mb-3">Latest Articles</h2>
  <ArticlesIsland client:load initialItems={items} tags={tags} totalPages={totalPages} />
</section>
